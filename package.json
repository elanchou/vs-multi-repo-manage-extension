{
  "name": "vscode-multi-git-manager",
  "displayName": "Multi-Git Manager",
  "description": "Manage multiple Git repositories in your workspace",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:multiGitManagerView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multi-git-manager",
          "title": "Multi-Git Manager",
          "icon": "resources/git-icon.svg"
        }
      ]
    },
    "views": {
      "multi-git-manager": [
        {
          "id": "multiGitManagerView",
          "name": "Repositories"
        }
      ]
    },
    "commands": [
      {
        "command": "multiGitManager.refreshView",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "multiGitManager.checkoutAll",
        "title": "Checkout All",
        "icon": "$(git-branch)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "multiGitManager.refreshView",
          "when": "view == multiGitManagerView",
          "group": "navigation"
        },
        {
          "command": "multiGitManager.checkoutAll",
          "when": "view == multiGitManagerView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "typescript": "^4.2.4"
  }
}